#!/bin/bash

echo "=========================================="
echo "Network Scan Results"
echo "Network: 192.168.29.0/24"
echo "=========================================="
echo ""

sudo nmap -sn 192.168.29.0/24 --dns-servers 192.168.29.43 | \
grep -E "Nmap scan report|Host is up|MAC Address" | \
sed 's/Nmap scan report for /\nüñ•Ô∏è  HOST: /g' | \
sed 's/Host is up/   ‚úì Status: UP/g' | \
sed 's/MAC Address:/   üîß MAC:/g'

echo ""
echo "=========================================="
echo "Scan Complete"
echo "=========================================="
